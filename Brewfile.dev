# Brewfile - Dependencies for Badgetizr development on macOS
# Run: brew bundle

# Core dependencies
brew "gh"              # GitHub CLI
brew "glab"            # GitLab CLI
brew "yq"              # YAML processor

# Development tools
brew "shellcheck"      # Shell script linter
brew "shfmt"           # Shell script formatter
brew "bats-core"       # Bash Automated Testing System
brew "kcov"            # Code coverage tool (buggy on macos 11/19/2025)

# Developer experience
brew "terminal-notifier"  # macOS notifications
