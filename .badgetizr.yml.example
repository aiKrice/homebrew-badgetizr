# Badgetizr Configuration Example
# All settings shown with their default values

badge_wip:
  enabled: "true"  # Default: enabled
  settings:
    color: "yellow"
    label: "WIP"
    logo: "vlcmediaplayer"
    # labelized: "work in progress"  # Optional: auto-manage GitHub/GitLab labels

badge_hotfix:
  enabled: "false"  # Default: disabled
  settings:
    color: "red"
    text_color: "white"
    label: "HOTFIX"
    # labelized: "Hotfix"  # Optional: auto-manage GitHub/GitLab labels

badge_ticket:
  enabled: "false"  # Default: disabled
  settings:
    color: "blue"
    label: "JIRA"
    logo: "jirasoftware"
    sed_pattern: '.*\(([^)]+)\).*'  # Matches: feat(ABC-123): description
    url: "https://yourproject.atlassian.net/browse/%s"

badge_base_branch:
  enabled: "false"  # Default: disabled
  settings:
    base_branch: "develop"
    color: "orange"
    label: "Target"

badge_ci:
  enabled: "false"  # Default: disabled
  settings:
    label: "CI"
    logo: "bitrise"

badge_dynamic:
  enabled: "false"  # Default: disabled
  settings:
    patterns:
      - badge_1:
        sed_pattern: '(- \[ \] Tests added)'
        label: "Tests"
        value: "Pending"
        color: "orange"
      - badge_2:
        sed_pattern: '(- \[x\] Tests added)'
        label: "Tests"
        value: "Done"
        color: "green"
      - badge_3:
        sed_pattern: '(- \[ \] Documentation updated)'
        label: "Docs"
        value: "Missing"
        color: "red"
      - badge_4:
        sed_pattern: '(- \[x\] Documentation updated)'
        label: "Docs"
        value: "Updated"
        color: "green"

badge_ready_for_approval:
  enabled: "false"  # Default: disabled
  settings:
    color: "darkgreen"
    label: "Ready"
    logo: "checkmark"
    labelized: "Ready for Approval"  # Optional: auto-manage GitHub/GitLab labels

